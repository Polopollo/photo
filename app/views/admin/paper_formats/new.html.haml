.block
  .secondary-navigation
    %ul.wat-cf
      %li.first
        = link_to "#{t("web-app-theme.list", :default => "List")}", admin_paper_formats_path
      %li.active
        = link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_paper_format_path
  .content
    %h2.title
      = t("web-app-theme.new", :default => "New")
      PaperFormat
    .inner
      - form_for :paper_format, :url => admin_paper_formats_path, :html => { :class => :form } do |f|
      = render :partial => "form", :locals => {:f => f}
      - end
- content_for :sidebar, render(:partial => 'sidebar')
