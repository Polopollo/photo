.group
  = error_message_on @paper_format, :base 
  = f.label :width, t("activerecord.attributes.paper_format.width"), :class => :label
  = f.text_field :width, :class => 'text_field'
  %span.description
    Например: 10 или 9,5
.group
  = f.label :height, t("activerecord.attributes.paper_format.height"), :class => :label
  = f.text_field :height, :class => 'text_field'
  %span.description
    Например: 15 или 13
.group.navform.wat-cf
  %button.button{ :type => "submit" }
    = image_tag("web-app-theme/tick.png", :alt => t("web-app-theme.save"))
    = t("web-app-theme.save")
  = link_to "#{image_tag("web-app-theme/cross.png", :alt => t("web-app-theme.cancel"))} #{t("web-app-theme.cancel")}", admin_paper_formats_path, :class => "button"
