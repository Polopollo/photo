.block
  .secondary-navigation
    %ul.wat-cf
      %li.first
        = link_to t("web-app-theme.list"), admin_paper_formats_path
      %li
        = link_to t("web-app-theme.new"), new_admin_paper_format_path
      %li.active
        = link_to t("web-app-theme.edit"), edit_admin_paper_format_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      PaperFormat
    .inner
      - form_for @paper_format, :url => admin_paper_format_path(@paper_format), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
      -
- content_for :sidebar, render(:partial => 'sidebar')
