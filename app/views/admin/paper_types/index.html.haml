.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active
        = link_to "#{t("web-app-theme.list", :default => "List")}", admin_paper_types_path
      %li
        = link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_paper_type_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      PaperTypes
    .inner
      %table.table
        %tr
          %th.first
            ID
          %th
            = t("activerecord.attributes.admin_paper_type.name", :default => t("activerecord.labels.name", :default => "Name"))
          %th
            = t("web-app-theme.created_at", :default => "Created at")
          %th.last
            \&nbsp;
        - @paper_types.each do |paper_type|
        %tr{ :class => cycle("odd", "even") }
          %td
            = paper_type.id
          %td
            = link_to paper_type.name, admin_paper_type_path(paper_type)
          %td
            = paper_type.created_at
          %td.last
            = link_to "#{t("web-app-theme.show", :default => "Show")}", admin_paper_type_path(paper_type)
            |
            = link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_paper_type_path(paper_type)
            |
            = link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_paper_type_path(paper_type), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
        - end
      .actions-bar.wat-cf
        .actions
        = will_paginate @paper_types
- content_for :sidebar, render(:partial => 'sidebar')
