<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_tasks_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_task_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_task_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.admin_task.title", :default => t("activerecord.labels.title", :default => "Title")) %>:</b>
          <%= @task.title %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_task.description", :default => t("activerecord.labels.description", :default => "Description")) %>:</b>
          <%= @task.description %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_task.archived", :default => t("activerecord.labels.archived", :default => "Archived")) %>:</b>
          <%= @task.archived %>
        </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_admin_task_path(@task), :class => "button" %> 
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", admin_task_path(@task), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>