.block
  .secondary-navigation
    %ul.wat-cf
      %li.first
        = link_to "#{t("web-app-theme.list", :default => "List")}", albums_path
      %li
        = link_to "#{t("web-app-theme.new", :default => "New")}", new_album_path
      %li.active
        = link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_album_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Album
    .inner
      - form_for @album, :url => album_path(@album), :html => { :class => :form } do |f|
      = render :partial => "form", :locals => {:f => f}
      - end
- content_for :sidebar, render(:partial => 'sidebar')
