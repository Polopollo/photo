.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active
        = link_to "#{t("web-app-theme.list", :default => "List")}", albums_path
      %li
        = link_to "#{t("web-app-theme.new", :default => "New")}", new_album_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Albums
    .inner
      %table.table
        %tr
          %th.first
            ID
          %th
            = t("activerecord.attributes.album.name", :default => t("activerecord.labels.name", :default => "Name"))
          %th
            = t("web-app-theme.created_at", :default => "Created at")
          %th.last
            \&nbsp;
        - @albums.each do |album|
        %tr{ :class => cycle("odd", "even") }
          %td
            = album.id
          %td
            = link_to album.name, album_path(album)
          %td
            = album.created_at
          %td.last
            = link_to "#{t("web-app-theme.show", :default => "Show")}", album_path(album)
            |
            = link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_album_path(album)
            |
            = link_to "#{t("web-app-theme.delete", :default => "Delete")}", album_path(album), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
        - end
      .actions-bar.wat-cf
        .actions
        = will_paginate @albums
- content_for :sidebar, render(:partial => 'sidebar')
